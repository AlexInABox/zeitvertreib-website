{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npx drizzle-kit pull && for f in ./drizzle/*.ts; do echo '// @ts-nocheck' | cat - \"$f\" > temp && mv temp \"$f\"; done && tsc",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "db:init": "wrangler d1 execute zeitvertreib-data --local --file=./schema.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1/",
    "dev:fresh": "npm run db:reset && npm run dev"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.7.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.9.3",
    "wrangler": "^4.42.0"
  },
  "dependencies": {
    "@2toad/profanity": "^3.2.0",
    "@discordjs/builders": "^1.11.3",
    "drizzle-orm": "^0.44.6",
    "glin-profanity": "^2.3.8",
    "openai": "^6.2.0",
    "washyourmouthoutwithsoap": "^1.0.2"
  }
}