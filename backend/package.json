{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rm -rf node_modules/ && npm i && rm -rf dist/ && NODE_ENV=production npx drizzle-kit pull && npx tsc",
    "start": "wrangler dev --ip 127.0.0.1",
    "db:init": "wrangler d1 execute ZEITVERTREIB_DATA -e dev --local --command 'SELECT 1;' && npx drizzle-kit push",
    "db:devscript": "wrangler d1 execute ZEITVERTREIB_DATA -e dev --local --file ./devscripts/giveallfakerankadmin.sql"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.7.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "wrangler": "^4.42.0"
  },
  "dependencies": {
    "@2toad/profanity": "^3.2.0",
    "@discordjs/builders": "^1.13.0",
    "@discordjs/rest": "^2.6.0",
    "@zeitvertreib/types": "file:../types",
    "aws4fetch": "^1.0.20",
    "better-sqlite3": "^12.4.1",
    "discord-api-types": "^0.38.31",
    "discord-interactions": "^4.4.0",
    "drizzle-orm": "^0.45.0",
    "glin-profanity": "^2.3.8",
    "openai": "^6.2.0",
    "washyourmouthoutwithsoap": "^1.0.2"
  }
}
