{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rimraf node_modules/ && npm i && rimraf dist/ && npm run db:init && NODE_ENV=production npx drizzle-kit pull && npx tsc",
    "build:dev": "rimraf node_modules/ && npm i && rimraf dist/ && npm run db:init && npx tsc",
    "start": "npm run build:dev && npm-run-all --parallel watch:dev wrangler:dev",
    "wrangler:dev": "wrangler dev --ip 127.0.0.1",
    "watch:dev": "tsc --watch --project tsconfig.json",
    "db:init": "wrangler d1 execute ZEITVERTREIB_DATA -e dev --local --command 'SELECT 1;' && npx drizzle-kit push",
    "db:devscript": "wrangler d1 execute ZEITVERTREIB_DATA -e dev --local --file ./devscripts/giveallfakerankadmin.sql",
    "prepare": "ts-patch install"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^25.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "npm-run-all": "^4.1.5",
    "ts-patch": "^3.3.0",
    "typescript": "~5.9.3",
    "wrangler": "^4.61.1",
    "rimraf": "^6.1.2"
  },
  "dependencies": {
    "@2toad/profanity": "^3.2.0",
    "@discordjs/builders": "^1.13.1",
    "@discordjs/rest": "^2.6.0",
    "@zeitvertreib/types": "file:../types",
    "aws4fetch": "^1.0.20",
    "better-sqlite3": "^12.6.2",
    "discord-api-types": "^0.38.38",
    "discord-interactions": "^4.4.0",
    "drizzle-orm": "^0.45.1",
    "emailjs": "^5.0.0",
    "glin-profanity": "^3.1.5",
    "openai": "^6.17.0",
    "typia": "^11.0.3",
    "washyourmouthoutwithsoap": "^1.0.2"
  }
}
